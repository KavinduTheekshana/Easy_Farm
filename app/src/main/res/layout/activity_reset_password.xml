<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f5f9"
    tools:context=".reset_password">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="170dp"
            android:layout_gravity="center"

            android:layout_height="40dp"
            android:src="@drawable/logotext"></ImageView>






        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET PASSWORD"
            android:fontFamily="@font/ralewaymedium"
            android:textColor="#393838"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="25dp"></TextView>

        <View
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="#fe6e35"
            android:layout_width = "62dp"
            android:layout_height="3dp"/>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide your account's email for which you want reset your password"
            android:fontFamily="@font/ralewaylight"
            android:layout_marginTop="18dp"
            android:textColor="#393838"
            android:textSize="18dp"
            android:gravity="center">

        </TextView>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_modern"
                android:drawableLeft="@drawable/email_svgrepo_com"
                android:drawablePadding="20dp"
                android:hint="Email Address"
                android:textColor="#212121"
                android:fontFamily="@font/ralewayregular"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp" />




            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ralewayblack"
                android:lineHeight="0dp"
                android:text="Reset Password"
                android:backgroundTint="#fe6e35"
                app:cornerRadius="0dp">

            </com.google.android.material.button.MaterialButton>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If You Don't have An Account? "
                    android:fontFamily="@font/ralewayregular"
                    android:textColor="#393838"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Register"
                    android:fontFamily="@font/ralewaybold"
                    android:textColor="#393838"></TextView>
            </LinearLayout>


            <!--            <TextView-->
            <!--                android:layout_marginTop="6dp"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="If You don't have account"-->
            <!--                android:gravity="center"-->
            <!--                android:fontFamily="@font/ralewayregular"></TextView>-->

            <!--            <com.google.android.material.button.MaterialButton-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="60dp"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:fontFamily="@font/ralewayblack"-->
            <!--                android:lineHeight="0dp"-->
            <!--                android:text="Register"-->
            <!--                android:backgroundTint="#329962"-->
            <!--                app:cornerRadius="0dp">-->

            <!--            </com.google.android.material.button.MaterialButton>-->

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="bottom">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/grow"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            >

        </ImageView>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>